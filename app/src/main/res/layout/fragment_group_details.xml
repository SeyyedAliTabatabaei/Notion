<?xml version="1.0" encoding="utf-8"?><androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:background="?backgroundLayout">    <com.google.android.material.appbar.AppBarLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="?backgroundLayout"        app:liftOnScroll="true">        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <com.google.android.material.card.MaterialCardView                android:id="@+id/cv_chart_avatar"                android:layout_width="45dp"                android:layout_height="45dp"                android:layout_marginVertical="24dp"                android:layout_marginEnd="20dp"                app:cardCornerRadius="60dp"                app:cardElevation="10dp"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintTop_toTopOf="parent">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:scaleType="fitXY"                    android:src="@drawable/avatar" />            </com.google.android.material.card.MaterialCardView>            <com.notion.presentation.cviews.TextViewBlack                android:id="@+id/tv_chart_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginEnd="10dp"                android:text="@string/name"                android:textSize="15sp"                app:layout_constraintBottom_toTopOf="@id/tv_chart_date"                app:layout_constraintEnd_toStartOf="@id/cv_chart_avatar"                app:layout_constraintTop_toTopOf="@id/cv_chart_avatar"                app:layout_constraintVertical_chainStyle="packed" />            <com.notion.presentation.cviews.TextViewRegular                android:id="@+id/tv_chart_date"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginEnd="10dp"                android:text="@string/date"                android:textColor="?android:textColorSecondary"                android:textSize="12sp"                app:layout_constraintBottom_toBottomOf="@id/cv_chart_avatar"                app:layout_constraintEnd_toStartOf="@id/cv_chart_avatar"                app:layout_constraintTop_toBottomOf="@id/tv_chart_name" />            <com.google.android.material.card.MaterialCardView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                app:cardCornerRadius="70dp"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintStart_toStartOf="parent"                android:layout_marginStart="20dp"                app:cardElevation="0dp"                android:backgroundTint="?backgroundLayout"                app:strokeWidth="1dp"                app:strokeColor="?cardStrokColor"                android:layout_marginTop="20dp">                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <ImageView                        android:layout_width="44dp"                        android:layout_height="44dp"                        android:src="@drawable/ic_notification"                        android:layout_margin="4dp"/>                    <ImageView                        android:layout_width="44dp"                        android:layout_height="44dp"                        android:src="@drawable/ic_gifts"                        android:layout_margin="4dp"/>                </LinearLayout>            </com.google.android.material.card.MaterialCardView>        </androidx.constraintlayout.widget.ConstraintLayout>    </com.google.android.material.appbar.AppBarLayout>    <com.google.android.material.card.MaterialCardView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:backgroundTint="?backgroundCard"        android:layout_marginTop="24dp"        android:layout_marginBottom="15dp"        android:layout_marginHorizontal="20dp"        app:cardCornerRadius="12dp"        app:cardElevation="0dp"        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <com.google.android.material.card.MaterialCardView                android:id="@+id/cv_groupDetails_avatar"                android:layout_width="88dp"                android:layout_height="88dp"                app:strokeColor="?colorPrimary"                app:strokeWidth="3dp"                app:cardCornerRadius="90dp"                android:backgroundTint="?backgroundLayout"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent"                android:layout_marginTop="16dp">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:src="@drawable/medal1"                    android:padding="20dp" />            </com.google.android.material.card.MaterialCardView>            <com.notion.presentation.cviews.TextViewRegular                android:id="@+id/tv_groupDetails_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="بچه های مشهد"                android:textSize="16sp"                app:layout_constraintTop_toBottomOf="@id/cv_groupDetails_avatar"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                android:layout_marginTop="9dp"/>            <com.notion.presentation.cviews.TextViewRegular                android:id="@+id/tv_groupDetails_numberProject"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="124243"                android:textSize="12sp"                app:layout_constraintTop_toBottomOf="@id/tv_groupDetails_title"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                android:layout_marginTop="9dp"/>            <LinearLayout                android:id="@+id/ll_groupDetails_tab"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal"                android:layout_marginTop="20dp"                android:layoutDirection="rtl"                app:layout_constraintTop_toBottomOf="@id/tv_groupDetails_numberProject">                <LinearLayout                    android:id="@+id/ll_groupDetails_member"                    android:layout_weight="1"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    android:background="?selectableItemBackground">                    <com.notion.presentation.cviews.TextViewRegular                        android:layout_weight="1"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:text="اعضا"                        android:textSize="16sp"                        android:gravity="center"                        android:paddingVertical="5dp"/>                    <View                        android:id="@+id/v_groupDetails_tabMember"                        android:layout_width="match_parent"                        android:layout_height="3dp"                        android:background="?colorPrimary"                        android:layout_marginHorizontal="12dp"/>                </LinearLayout>                <LinearLayout                    android:id="@+id/ll_groupDetails_chellange"                    android:layout_weight="1"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    android:background="?selectableItemBackground">                    <com.notion.presentation.cviews.TextViewRegular                        android:layout_weight="1"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:text="چالش ها"                        android:textSize="16sp"                        android:gravity="center"                        android:paddingVertical="5dp"/>                    <View                        android:id="@+id/v_groupDetails_tabChellange"                        android:layout_width="match_parent"                        android:layout_height="3dp"                        android:background="?colorPrimary"                        android:visibility="invisible"                        android:layout_marginHorizontal="12dp"/>                </LinearLayout>            </LinearLayout>            <androidx.viewpager2.widget.ViewPager2                android:id="@+id/vp_groupDetails"                android:layout_width="match_parent"                android:layout_height="0dp"                app:layout_constraintTop_toBottomOf="@id/ll_groupDetails_tab"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                android:layout_marginTop="20dp"/>        </androidx.constraintlayout.widget.ConstraintLayout>    </com.google.android.material.card.MaterialCardView></androidx.coordinatorlayout.widget.CoordinatorLayout>