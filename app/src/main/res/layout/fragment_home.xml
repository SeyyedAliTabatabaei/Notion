<?xml version="1.0" encoding="utf-8"?><androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:background="?backgroundLayout"    android:layoutDirection="ltr">    <com.google.android.material.appbar.AppBarLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="?backgroundLayout"        app:liftOnScroll="true">        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <com.google.android.material.card.MaterialCardView                android:id="@+id/cv_home_avatar"                android:layout_width="45dp"                android:layout_height="45dp"                android:layout_marginVertical="24dp"                android:layout_marginEnd="20dp"                app:cardCornerRadius="60dp"                app:cardElevation="10dp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintTop_toTopOf="parent">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:scaleType="fitXY"                    android:src="@drawable/avatar" />            </com.google.android.material.card.MaterialCardView>            <com.notion.presentation.cviews.TextViewBlack                android:id="@+id/tv_home_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginEnd="10dp"                android:text="@string/name"                android:textSize="15sp"                app:layout_constraintBottom_toTopOf="@id/tv_home_date"                app:layout_constraintEnd_toStartOf="@id/cv_home_avatar"                app:layout_constraintTop_toTopOf="@id/cv_home_avatar"                app:layout_constraintVertical_chainStyle="packed" />            <com.notion.presentation.cviews.TextViewRegular                android:id="@+id/tv_home_date"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginEnd="10dp"                android:text="@string/date"                android:textColor="?android:textColorSecondary"                android:textSize="12sp"                app:layout_constraintBottom_toBottomOf="@id/cv_home_avatar"                app:layout_constraintEnd_toStartOf="@id/cv_home_avatar"                app:layout_constraintTop_toBottomOf="@id/tv_home_name" />            <com.google.android.material.card.MaterialCardView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                app:cardCornerRadius="70dp"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintStart_toStartOf="parent"                android:layout_marginStart="20dp"                app:cardElevation="0dp"                android:backgroundTint="?backgroundCard"                app:strokeWidth="1dp"                app:strokeColor="?cardStrokColor">                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <ImageView                        android:layout_width="44dp"                        android:layout_height="44dp"                        android:src="@drawable/ic_notification"                        android:layout_margin="4dp"/>                    <ImageView                        android:layout_width="44dp"                        android:layout_height="44dp"                        android:src="@drawable/ic_gifts"                        android:layout_margin="4dp"/>                </LinearLayout>            </com.google.android.material.card.MaterialCardView>        </androidx.constraintlayout.widget.ConstraintLayout>    </com.google.android.material.appbar.AppBarLayout>    <androidx.core.widget.NestedScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:paddingBottom="50dp"        android:clipToPadding="false"        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal"                android:weightSum="3"                android:layout_marginTop="10dp"                android:layout_marginHorizontal="14dp">                <com.google.android.material.card.MaterialCardView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:layout_marginHorizontal="6dp"                    app:cardCornerRadius="12dp"                    app:cardElevation="0dp">                                        <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical"                        android:gravity="center">                                                <ImageView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:src="@drawable/ic_wallet"                            android:adjustViewBounds="true"                            android:layout_marginTop="6dp"                            android:layout_marginHorizontal="20dp"/>                        <com.notion.presentation.cviews.TextViewBold                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="13,000"                            android:textSize="20sp"                            android:layout_marginTop="10dp"/>                        <com.notion.presentation.cviews.TextViewRegular                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/inventory"                            android:textColor="?android:textColorSecondary"                            android:textSize="8sp"                            android:layout_marginBottom="12dp"/>                    </LinearLayout>                </com.google.android.material.card.MaterialCardView>                <com.google.android.material.card.MaterialCardView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:layout_marginHorizontal="6dp"                    app:cardCornerRadius="12dp"                    app:cardElevation="0dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical"                        android:gravity="center">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:src="@drawable/ic_gem"                            android:adjustViewBounds="true"                            android:layout_marginTop="6dp"                            android:layout_marginHorizontal="20dp"/>                        <com.notion.presentation.cviews.TextViewBold                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="6"                            android:textSize="20sp"                            android:layout_marginTop="10dp"/>                        <com.notion.presentation.cviews.TextViewRegular                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/your_gem"                            android:textColor="?android:textColorSecondary"                            android:textSize="8sp"                            android:layout_marginBottom="12dp"/>                    </LinearLayout>                </com.google.android.material.card.MaterialCardView>                <com.google.android.material.card.MaterialCardView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:layout_marginHorizontal="6dp"                    app:cardCornerRadius="12dp"                    app:cardElevation="0dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical"                        android:gravity="center">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:src="@drawable/ic_coin"                            android:adjustViewBounds="true"                            android:layout_marginTop="6dp"                            android:layout_marginHorizontal="20dp"/>                        <com.notion.presentation.cviews.TextViewBold                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="5,000"                            android:textSize="20sp"                            android:layout_marginTop="10dp"/>                        <com.notion.presentation.cviews.TextViewRegular                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/your_coin"                            android:textColor="?android:textColorSecondary"                            android:textSize="8sp"                            android:layout_marginBottom="12dp"/>                    </LinearLayout>                </com.google.android.material.card.MaterialCardView>            </LinearLayout>            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginHorizontal="20dp"                android:layout_marginTop="20dp">                <com.google.android.material.card.MaterialCardView                    android:id="@+id/cv_home_seller"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="30dp"                    android:backgroundTint="?backgroundCard"                    app:layout_constraintTop_toTopOf="parent"                    app:cardCornerRadius="12dp"                    app:cardElevation="0dp"                    app:layout_constraintBottom_toBottomOf="parent">                    <androidx.constraintlayout.widget.ConstraintLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                        <com.notion.presentation.cviews.TextViewBold                            android:id="@+id/tv_home_seller"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/seller"                            android:textColor="?colorPrimary"                            android:textSize="16sp"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintTop_toTopOf="parent"                            android:layout_marginTop="15dp"                            android:layout_marginEnd="12dp"/>                        <LinearLayout                            android:id="@+id/ll_home_seller"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:orientation="horizontal"                            app:layout_constraintTop_toBottomOf="@id/tv_home_seller"                            app:layout_constraintEnd_toEndOf="@id/tv_home_seller"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:clickable="true"                            android:background="?selectableItemBackground">                            <ImageView                                android:layout_width="20dp"                                android:layout_height="20dp"                                android:scaleType="fitXY"                                android:src="@drawable/ic_arrow_left"                                android:layout_marginHorizontal="10dp"/>                            <com.notion.presentation.cviews.TextViewRegular                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="@string/buy_new_product"                                android:textSize="10sp"/>                        </LinearLayout>                        <androidx.recyclerview.widget.RecyclerView                            android:id="@+id/rv_home_sellerProduct"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            tools:itemCount="2"                            tools:listitem="@layout/item_product_small"                            app:layout_constraintTop_toBottomOf="@id/ll_home_seller"                            android:layout_marginTop="18dp"                            android:orientation="horizontal"                            app:layout_constraintBottom_toBottomOf="parent"                            android:layout_marginBottom="12dp"/>                        <ProgressBar                            android:id="@+id/pb_home_sellerProduct"                            android:layout_width="30dp"                            android:layout_height="30dp"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintStart_toStartOf="parent"                            app:layout_constraintTop_toBottomOf="@id/ll_home_seller"                            android:layout_marginTop="18dp"                            android:visibility="gone"/>                    </androidx.constraintlayout.widget.ConstraintLayout>                </com.google.android.material.card.MaterialCardView>                <ImageView                    android:layout_width="87dp"                    android:layout_height="87dp"                    android:src="@drawable/ic_seller"                    android:scaleType="fitXY"                    android:elevation="10dp"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    android:layout_marginStart="10dp"/>            </androidx.constraintlayout.widget.ConstraintLayout>            <com.google.android.material.card.MaterialCardView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:backgroundTint="?backgroundCard"                android:layout_marginHorizontal="20dp"                android:layout_marginTop="20dp"                app:cardCornerRadius="12dp"                app:cardElevation="0dp">                <androidx.constraintlayout.widget.ConstraintLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <ImageView                        android:id="@+id/iv_home_bgTopShop"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:src="@drawable/bg_top_shop"                        android:adjustViewBounds="true"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toTopOf="parent"/>                    <com.notion.presentation.cviews.TextViewBold                        android:id="@+id/tv_home_yourShop"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="@string/your_shop"                        android:textSize="16sp"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@id/iv_home_bgTopShop"                        android:layout_marginTop="12dp"/>                    <androidx.recyclerview.widget.RecyclerView                        android:id="@+id/rv_home_yourProducts"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        tools:itemCount="2"                        tools:listitem="@layout/item_product_small"                        app:layout_constraintTop_toBottomOf="@id/tv_home_yourShop"                        android:layout_marginTop="18dp"                        android:orientation="horizontal"                        app:layout_constraintBottom_toBottomOf="parent"                        android:layout_marginBottom="12dp"/>                    <ProgressBar                        android:id="@+id/pb_home_yourProduct"                        android:layout_width="30dp"                        android:layout_height="30dp"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@id/tv_home_yourShop"                        android:layout_marginTop="18dp"                        android:visibility="gone"/>                    <LinearLayout                        android:id="@+id/ll_home_goToShop"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:orientation="horizontal"                        android:layout_marginTop="10dp"                        android:gravity="center"                        android:clickable="true"                        android:background="?selectableItemBackground"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@id/rv_home_yourProducts"                        app:layout_constraintBottom_toBottomOf="parent"                        android:layout_marginBottom="10dp">                        <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:scaleType="fitXY"                            android:src="@drawable/ic_arrow_left"                            android:layout_marginHorizontal="10dp"/>                        <com.notion.presentation.cviews.TextViewRegular                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/go_to_shop"                            android:textSize="10sp" />                    </LinearLayout>                </androidx.constraintlayout.widget.ConstraintLayout>            </com.google.android.material.card.MaterialCardView>        </LinearLayout>    </androidx.core.widget.NestedScrollView></androidx.coordinatorlayout.widget.CoordinatorLayout>