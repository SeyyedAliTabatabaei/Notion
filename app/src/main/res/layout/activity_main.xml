<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.MainActivity"
    android:background="?backgroundLayout">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_main_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"/>

    <ImageView
        android:id="@+id/iv_main_bgBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_bottom_sheet"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/iv_main_shop"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shop"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_main_bgBottomNavigation"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/iv_main_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/ic_profile"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_bgBottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_main_shop"
        android:layout_marginBottom="18dp"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/iv_main_chart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/ic_chart"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_bgBottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_main_shop"
        android:layout_marginBottom="18dp"
        android:clickable="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>