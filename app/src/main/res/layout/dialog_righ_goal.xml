<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    style="@style/Dialog">    <ImageView        android:id="@+id/iv_rich_goal_semiCircle"        android:layout_width="wrap_content"        android:layout_height="44dp"        android:src="@drawable/ic_semi_circular"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:tint="?backgroundCard"        android:scaleType="fitXY"/>    <com.google.android.material.card.MaterialCardView        android:id="@+id/cv_rich_goal"        android:layout_width="match_parent"        android:layout_height="0dp"        app:cardElevation="0dp"        app:cardCornerRadius="24dp"        android:backgroundTint="?backgroundCard"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintTop_toBottomOf="@id/iv_rich_goal_semiCircle" />    <RelativeLayout        android:layout_width="74dp"        android:layout_height="74dp"        android:layout_margin="8dp"        android:elevation="10dp"        app:layout_constraintTop_toTopOf="@id/iv_rich_goal_semiCircle"        app:layout_constraintEnd_toEndOf="@id/iv_rich_goal_semiCircle"        app:layout_constraintStart_toStartOf="@id/iv_rich_goal_semiCircle"        android:background="@drawable/background_icon_top">        <ImageView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:padding="20dp"            android:src="@drawable/ic_magic_star"            app:tint="@color/white" />    </RelativeLayout>    <com.google.android.material.card.MaterialCardView        android:id="@+id/cv_rich_goal_main"        android:layout_width="310dp"        android:layout_height="match_parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintTop_toTopOf="@id/cv_rich_goal"        android:layout_marginHorizontal="20dp"        android:layout_marginBottom="20dp"        android:paddingHorizontal="15dp"        app:cardElevation="0dp"        android:layout_marginTop="20dp"        app:cardCornerRadius="16dp"        android:backgroundTint="?backgroundLayout"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical"            android:paddingBottom="40dp"            android:gravity="center_horizontal">            <com.notion.presentation.cviews.TextViewRegular                android:id="@+id/tv_rich_goal_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="تبریک!"                android:textSize="18sp"                android:textColor="@color/green"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent"                android:layout_marginTop="50dp"/>            <com.notion.presentation.cviews.TextViewRegular                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="16sp"                android:layout_marginHorizontal="30dp"                android:gravity="center_horizontal"                android:text="شما مبلغ ۱۰ هزار تومان از سمت والدین خود برای گذراندن چالش دریافت کردید."/>        </LinearLayout>    </com.google.android.material.card.MaterialCardView></androidx.constraintlayout.widget.ConstraintLayout>